# Vridix Platform - Environment Variables

# API Configuration
VITE_API_URL=http://localhost:3000/api
VITE_APP_NAME=Vridix

# Authentication
VITE_JWT_SECRET=your-secret-key-here
VITE_JWT_EXPIRES_IN=24h

# Development Mode
VITE_DEV_MODE=true

# Default Admin Credentials (Development Only)
VITE_ADMIN_EMAIL=admin@vridix.com
VITE_ADMIN_PASSWORD=admin123

# Mock Data Mode (for testing without backend)
VITE_USE_MOCK_DATA=true

# Features Toggle
VITE_ENABLE_QRIS_PAYMENT=true
VITE_ENABLE_BLOCKCHAIN=false
VITE_ENABLE_AI_RECOMMENDATIONS=false

# Payment Gateway (for future integration)
VITE_MIDTRANS_CLIENT_KEY=your-midtrans-key
VITE_MIDTRANS_SERVER_KEY=your-midtrans-server-key

# Map API (if needed)
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-key

# Analytics (optional)
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Storage (for file uploads)
VITE_STORAGE_URL=http://localhost:3000/uploads

# Note: Don't commit .env file to git
# Copy this file to .env and update with your values
